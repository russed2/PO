# Базовый образ Go
FROM golang:1.23.3

# Установим рабочую директорию внутри контейнера
WORKDIR /app

# Копируем все файлы проекта в контейнер
COPY . .

# Загружаем зависимости
RUN go mod download

# Собираем бинарник
RUN go build -o main .

# Указываем порт, который будет использоваться
EXPOSE 8080

# Запускаем приложение
CMD ["/app/main"]
